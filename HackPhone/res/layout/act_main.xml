<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="jjjj"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chidacan.hackphone.ActMain" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/bn10086"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="35dp"
        android:onClick="bn10086_click"
        android:text="10086" />

    <Button
        android:id="@+id/bn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bn10086"
        android:layout_alignBottom="@+id/bn10086"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:onClick="bn01_click"
        android:text="01" />

    <EditText
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bn10086"
        android:layout_below="@+id/bn10086"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="服务器地址" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bnset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:onClick="bnset_onClick"
        android:text="确定" />

    <EditText
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bnset"
        android:layout_alignLeft="@+id/bnset"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="服务器端口" />

</RelativeLayout>